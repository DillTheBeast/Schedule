{
  "manifest_version": 3,
  "name": "Schedule Checker",
  "version": "1.0",
  "description": "Checks today's schedule from a Google Sheet",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
